<table style="width:100%; border-collapse:collapse; border-spacing:0; margin:0; border:0;" cellpadding="0" cellspacing="0">
  <tbody>
  <tr>
    <td style="padding-left:15px; padding-right:15px; ">
      <table class="r" style="margin: 0 auto; border-spacing: 0; width: 600px;" align="center">
        <tbody>
        <tr>
          <td style="padding-top: 75px; padding-bottom: 45px; padding-left: 30px; padding-right: 30px;">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
              <tbody>
              <tr>
                <td>
                  <table border="0" cellpadding="0" cellspacing="0" width="100%" style="table-layout: fixed;">
                    <tbody>
                    <tr>
                      <td width="100%"></td>
                      <% if @footer_info[:social][:facebook_url].present? %>
                        <td align="center" style="width: 34px; padding: 0 9px;">
                          <a style="text-decoration: none;" href="<%= @footer_info[:social][:facebook_url] %>">
                            <img style="display: block; width: 34px;" src="https://<%= Settings.urls.static %>/email/t_ico_fb.png">
                          </a>
                        </td>
                      <% end %>
                      <td width="100%"></td>
                    </tr>
                    </tbody>
                  </table>
                </td>
              </tr>
              <tr>
                <td style="text-align: center; padding: 50px 0 15px;">
                  <div style="margin: 0 auto; font-weight: normal; font-family: Helvetica Neue, Helvetica, Arial, sans-serif; color: #222222; font-size: 12px; line-height: 1.5;">
                    <%= @footer_info[:address] %>
                    <br>
                    <% if @footer_info[:contact_phone].present? %>
                      <a href="tel:<%= @footer_info[:contact_phone].gsub(/[^0-9+]/, '')%>" style="color: rgb(0, 0, 0);">
                        <%= @footer_info[:contact_phone]%>
                      </a>
                      <br>
                    <% end %>
                    <% if @footer_info[:contact_email].present? %>
                      <a href="mailto:<%= @footer_info[:contact_email]%>" style="color:#000000 !important;">
                        <%= @footer_info[:contact_email]%>
                      </a>
                      <br>
                    <% end %>
                  </div>
                </td>
              </tr>
              </tbody>
            </table>
          </td>
        </tr>
        </tbody>
      </table>
    </td>
  </tr>
  </tbody>
</table>
