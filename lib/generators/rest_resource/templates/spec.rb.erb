resource '<%=plural_class_name%>' do
  let!(:<%=plural_file_name%>) { create_list(:<%=file_name%>, 5) }

  get '/api/v1/<%=plural_file_name%>' do
    parameter :size, "Размер страницы, по-умолчанию - #{JSONAPI.configuration.default_page_size}", scope: :page
    parameter :number, 'Номер страницы', scope: :page

    example_request 'Все' do
      expect(status).to eq 200
      expect(json[:data].size).to eq <%=class_name%>.count
    end
  end
end